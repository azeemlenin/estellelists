<h1>Edit Post under <%= @category.post_name%></h1>

<form action="/categories/<%= @category.id%>/posts/<%= @post.id%>" method="post">
  <input type="hidden" name="_method" value="put">
  <p>Name: <input type="text" name="post[name]" value="<%= @post.name %>"></p>
  <p>Phone number: <input type="text" name="post[phone]" value="<%= @post.phone %>"></p>
  <p>Email: <input type="text" name="post[email]" value="<%= @post.email %>"></p>
  <p>Title:<input type="text" name="post[title]" value="<%= @post.title %>"></p>
  <textarea cols="60" rows="10" name="post[desc]"><%= @post.desc %></textarea>
<br>
    <input type="submit" value="Submit">

</form>